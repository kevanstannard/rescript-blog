{
  "name": "rescript-blog",
  "private": true,
  "scripts": {
    "postinstall": "npm run re:build",
    "res:build": "rescript build",
    "res:watch": "rescript build -w",
    "blog:build": "node scripts/build -- ./docs",
    "blog:serve": "node scripts/serve -- ./docs",
    "blog:watch": "chokidar './content' './src' './static' -c 'npm run blog:build -s'",
    "build": "npx rescript clean && npm run res:build && npm run blog:build",
    "dev": "npm run blog:serve & npm run blog:watch"
  },
  "dependencies": {
    "browser-sync": "^2.27.5",
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1",
    "front-matter": "^4.0.2",
    "glob": "^7.1.6",
    "highlight.js": "^11.2.0",
    "linkify-it": "^3.0.2",
    "markdown-it": "^12.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reason-react": "^0.9.1",
    "rescript": "^9.1.4",
    "rimraf": "^3.0.2",
    "yargs": "^17.1.0"
  }
}
